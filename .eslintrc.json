{
	"extends": "airbnb",
	"rules": {
		"indent": [1, "tab", { "SwitchCase": 1, "VariableDeclarator": 1 }],
		"react/jsx-indent-props": [2, "tab"],
		"arrow-body-style": [2, "always"],
		"no-console": [1, { "allow": ["warn"] }],
		"max-len": [2, 160, 2, {
		  "ignoreUrls": true,
		  "ignoreComments": false
		}],
		"object-shorthand": [0],
		"strict": [0, "global"],
		"no-param-reassign": [2, { "props": false }]
	}
}
